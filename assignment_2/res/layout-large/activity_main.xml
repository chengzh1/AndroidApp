<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/shape">
    
  <LinearLayout
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30sp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="#FE9B21"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="15sp" />

</LinearLayout>
  
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <TextView
        android:layout_marginTop="10sp"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_price"
        android:textSize="20sp"
        android:textColor="#FE9B21" />
    <EditText
        android:id="@+id/edit_purchase_price"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="200,000"
        android:inputType="number" />
    <requestFocus />
    <TextView
       	android:layout_width="wrap_content"
       	android:layout_marginTop="10sp"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20sp"
        android:textColor="#FE9B21"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_payment"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/edit_down_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number" 
        android:hint="20"
        android:layout_marginTop="10sp"/>
    <requestFocus />
    <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mortgage_term"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/edit_mortgage_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:hint="30" 
        android:layout_marginTop="10sp"/>
    <requestFocus />
    <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yearrs"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interest_rate"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/edit_interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="numberDecimal" 
        android:hint="4.25"
        android:layout_marginTop="10sp"/>
    <requestFocus />
    <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="#FE9B21" 
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property_tax"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp" />
    <EditText
        android:id="@+id/edit_property_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:hint="3,000" 
        android:layout_marginTop="10sp"/>
    <requestFocus />
    <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ per year"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property_insurance"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/edit_property_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:hint="1,500" 
        android:layout_marginTop="10sp"/>
    <requestFocus />
     <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ per year"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp" />
</LinearLayout>

<LinearLayout 
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PMI" 
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp" />
    <EditText
        android:id="@+id/edit_pmi"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:focusable="false"
        android:inputType="number"
        android:hint="0.52" 
        android:layout_marginTop="10sp" />
    <requestFocus />
     <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="#FE9B21" 
        android:textSize="20sp"
        android:layout_marginTop="10sp" />
</LinearLayout>

<LinearLayout 
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	 <TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZIP code:"
        android:textColor="#FE9B21"
         android:textSize="20sp"
        android:layout_marginTop="10sp" />
    <EditText
        android:id="@+id/edit_zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="number"
        android:hint="90001"
        android:layout_marginTop="10sp"  />
    <requestFocus />
</LinearLayout>


<LinearLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:gravity="center_horizontal">
	<TextView
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_payment_date"
        android:textColor="#FE9B21"
        android:textSize="20sp"
        android:layout_marginTop="10sp" />
	<Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</LinearLayout>

<LinearLayout
    android:gravity="center_horizontal"
  	 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_marginTop="15sp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_calculate"
        android:background="@drawable/custom_button"
        android:textColor="#DEB887" 
        android:textSize="20sp"
        android:onClick="sendMessage"/>
 <TextView
      android:id="@+id/help"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25sp"
      android:textSize="20sp"
      android:onClick="help"
      android:text="@string/help_link"/>

</LinearLayout>


</LinearLayout>